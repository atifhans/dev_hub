<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="device_form">
        <%= render 'shared/device_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Device Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div class="center jumbotron" style="background-image: url('/assets/Elegant_Background-2.jpg');">
		<h1> Welcome to Device Hub </h1>
		<h2> Control all your devices from here! </h2>
		<div class="list-group">
			<% if !logged_in? %>
			<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
				<h4> or </h4>
		  	<%= link_to "Log in", login_path, class: "btn btn-lg btn-primary" %>
		  <% end %>
		</div>
	</div>
<% end %>
